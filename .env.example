# EDMO Pipeline Environment Configuration

# Environment
ENVIRONMENT=development

# Paths
DATA_DIR=./data
CONFIG_DIR=./config
MODELS_DIR=./data/models
OUTPUT_DIR=./data/outputs

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/pipeline.log

# Service Ports
NLP_SERVICE_PORT=8001
ASR_SERVICE_PORT=8002
DIARIZATION_SERVICE_PORT=8003
EMOTION_SERVICE_PORT=8004
CLUSTERING_SERVICE_PORT=8005
VISUALIZATION_SERVICE_PORT=8006

# Model Configuration
WHISPER_MODEL=base  # tiny, base, small, medium, large
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMOTION_MODEL=joeddav/distilbert-base-uncased-go-emotions-student

# Processing Configuration
AUDIO_SAMPLE_RATE=16000
TIME_WINDOW_SECONDS=30
OVERLAP_SECONDS=15

# Clustering Configuration
N_CLUSTERS=5
CLUSTERING_ALGORITHM=fuzzy_cmeans

# Privacy
ANONYMIZE_DATA=true
GDPR_COMPLIANT=true

# API Keys (if needed)
# HUGGINGFACE_TOKEN=your_token_here
# OPENAI_API_KEY=your_key_here
